<h1>Search for some theses</h1>

<%= render "searchable/search" %>

<% if @results != nil %>
  <table class="table table-striped table-hover">
    <tr>
      <th>Thesis ID</th>
      <th>Beschreibung</th>
      <th>Anzeigen</th>
      <th>Favoriten</th>
    </tr>
        <% @results.each do |thesis| %>
          <tr>
            <td><%= thesis["id"] %></td>
            <td><%= thesis["short"] %></td>
            <td><%= link_to "details", controller: "thesis", action: "detail", id: thesis["id"] %></td>
            <td><%= link_to "favorite", controller: "favorites", action: "create", object_type: "thesis", tiss_id: thesis["id"] %></td>
          </tr>
        <% end %>
  </table>
<% end %>
