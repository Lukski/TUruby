<h1>Persons: </h1>
<% if @favorite_persons != nil %>
  <ul>
  <% @favorite_persons.each do |favorite| %>
    <li>
      <%= favorite[0].xpath("//firstname").first.content %>
      <%= favorite[0].xpath("//lastname").first.content %>
      <%= link_to "details", controller: "person", action: "detail", id: favorite[1] %>
      <%= link_to "unfavorite", deletefavorite_path(:person, favorite[1]), method: :delete %>
    </li>
  <% end %>
  </ul>
<% end %>

